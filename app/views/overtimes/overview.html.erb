  <ul class="breadcrumb">
    <li><a href="/">首页</a> <span class="divider">/</span></li>
    <li><a href="/overtimes">加班系统</a> <span class="divider">/</span></li>
    <li class="active">加班统计</li>
  </ul>

  <div class="page-header"><h1>加班统计</h1></div>
  
  <span class="pull-right" id="date-filter" onclick="showDatePicker();"><%= @date_filter %></span>
  <%= link_to '导出报表', export_overtimes_path(:format => 'csv'), :class => 'btn' %>

  <div class="row">
    <div class="span5">
      <h2>基本信息</h2>
      <table class="table table-condensed">
        <tbody>
          <tr><th>姓名</th><td><%= current_user.chinese_name %></td></tr>
          <tr><th>部门</th><td></td></tr>
          <tr><th>入职日期</th><td></td></tr>
          <tr><th>已休年假天数</th><td></td></tr>
          <tr><th>年假剩余天数</th><td></td></tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <h2>加班信息</h2>
      <table class="table table-striped table-condensed">
        <thead><tr><th>#</th><th>标题</th><th>开始时间</th><th>结束时间</th><th>加班时间(小时)</th></tr></thead>
        <tbody>
          <% @overtime_flows.each_with_index do |flow, index| %>
          <tr><td><%= index+1 %></td><td><%= flow.overtime.subject %></td><td><%= flow.overtime.start_time %></td><td><%= flow.overtime.end_time %></td><td><%= flow.overtime.total_time %></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <p>
    <%= link_to '返回', overtimes_path, :class=>'btn' %>
  </p>
