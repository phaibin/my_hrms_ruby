<p id="notice"><%= notice %></p>

<ul class="breadcrumb">
  <li><a href="/">首页</a> <span class="divider">/</span></li>
  <li><li><%= link_to '加班系统', overtimes_path %> <span class="divider">/</span></li>
  <li class="active">加班详情</li>
</ul>

<div class="page-header"><h1><%= @overtime.subject %></h1></div>

<div class="row">
  <div class="span5">
    <table class="table table-condensed">
      <tr><th>主题:</th><td><%= @overtime.subject %></td></tr>
      <tr><th>申请人:</th><td><%= @overtime.applicant.chinese_name %></td></tr>
      <tr><th>开始时间:</th><td><%= @overtime.start_time %></td></tr>
      <tr><th>结束时间:</th><td><%= @overtime.end_time %></td></tr>
      <tr><th>申请日期:</th><td><%= @overtime.created_at %></td></tr>
      <tr><th>参加人员:</th><td><%= @overtime.participants_string %></td></tr>
      <tr><th>备注:</th><td><%= @overtime.content %></td></tr>
      <tr><th>状态:</th><td><%= @overtime.state.name %></td></tr>
    </table>
  </div>
</div>

<h2>修改历史</h2>
<table class="table table-condensed">
  <thead><tr><th>时间</th><th>修改人</th><th>状态</th></tr></thead>
  <tbody>
  <% for history in @overtime.histories %>
  <tr><td><%= history.created_at %></td><td><%= history.modified_by.chinese_name %></td><td><%= history.overtime_state.name %></td></tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to '返回', overtimes_path, :class=>'btn' %>
</p>

